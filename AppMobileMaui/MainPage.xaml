<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:AppMobileMaui.Components"
             x:Class="AppMobileMaui.MainPage">


    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>

    <StackLayout Padding="10">
        <Button Text="Detect Barcode"  Clicked="NavigateToBarcodePage" />
        <Image x:Name="barcodeImage" HeightRequest="500" BackgroundColor="Beige" />
    </StackLayout>


</ContentPage>
